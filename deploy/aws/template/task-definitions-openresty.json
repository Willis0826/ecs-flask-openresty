[
    {
        "name": "openresty",
        "image": "{{.Env.ECR_REGISTRY}}/openresty:{{.Env.VERSION}}",
        "cpu": 10,
        "memory": 256,
        "essential": true,
        "portMappings": [
            {
                "containerPort": 80,
                "hostPort": 80
            },
            {
                "containerPort": 443,
                "hostPort": 443
            }
        ],
        "mountPoints": [
            {
                "containerPath": "/var/log/nginx",
                "sourceVolume": "logs"
            },
            {
                "containerPath": "/etc/resty-auto-ssl",
                "sourceVolume": "certs"
            }
        ]
    }
]
